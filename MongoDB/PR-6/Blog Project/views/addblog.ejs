<html>

<head>
  <title>Blog DETAILS</title>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.7/css/all.css" />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500&display=swap" rel="stylesheet">
</head>

<style>
  * {
    box-sizing: border-box;
    padding: 0;
    margin: 0;
    font-family: 'Poppins', sans-serif;
  }

  body {
    /* background: linear-gradient(135deg, #291814d1, #4c362f); */
    background-image: url('../images/banner2.png');
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
    color: #fff;
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20px;
  }

  h2 {
    font-size: 36px;
    font-weight: 600;
    margin-bottom: 20px;
    text-align: center;
    color: hsl(198.59deg 94.67% 55.88%);;
  }

  .form-container {
    background: rgba(0, 0, 0, 0.7);
    /* Dark background for the form */
    border-radius: 20px;
    padding: 2rem;
    max-width: 600px;
    width: 100%;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.4);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .form-container:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.5);
  }

  label {
    font-size: 16px;
    color: hsl(198.59deg 94.67% 55.88%);;
    margin-bottom: 10px;
    font-weight: 500;
  }

  input,
  textarea {
    width: 100%;
    padding: 15px;
    margin-bottom: 20px;
    font-size: 16px;
    border-radius: 10px;
    border: 1px solid hsl(198.59deg 94.67% 55.88%);;
    box-shadow: 0px 4px 6px rgba(255, 102, 0, 0.2);
    outline: none;
    transition: all 0.3s ease;
    background-color: rgba(0, 0, 0, 0.3);
    color: white;
  }

  input:focus,
  textarea:focus {
    background-color: rgba(255, 102, 0, 0.1);
    border-color: #995b32d5;
    box-shadow: 0px 0px 10px rgba(255, 102, 0, 0.5);
  }

  .button {
    background: linear-gradient(135deg, #707072, #121314);
    border: none;
    color: white;
    padding: 15px;
    font-size: 18px;
    border-radius: 10px;
    cursor: pointer;
    transition: opacity 0.3s ease, transform 0.3s ease;
    width: 100%;
    text-align: center;
    box-shadow: 0px 4px 6px hsla(199, 95%, 56%, 0.363);

  }

  .button:hover {
    opacity: 0.9;
    transform: translateY(-5px);
    background: linear-gradient(135deg, hsla(199, 95%, 56%, 0.603), hsl(198.59deg 94.67% 55.88%));
    box-shadow: 0px 10px 15px hsla(199, 95%, 56%, 0.363);
  }

  .button-container {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .button-container a {
    background: hsl(198.59deg 94.67% 55.88%);;
    text-align: center;
    padding: 15px;
    border-radius: 10px;
    text-decoration: none;
    color: white;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    transition: opacity 0.3s ease;
    box-shadow: 0px 4px 6px rgba(255, 102, 0, 0.2);
  }

  .button-container a:hover {
    opacity: 0.8;
    background: hsla(199, 95%, 56%, 0.74);;
    box-shadow: 0px 10px 15px hsla(199, 95%, 56%, 0.534);
  }

  .navbar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    padding: 20px 30px;
    background: rgba(0, 0, 0, 0.6);
   
    display: flex;
    justify-content: space-between;
    align-items: center;
    z-index: 100;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.6);
  }
  .navbar a{
    color: #fff;
    padding: 0px 20px;
    font-size: 20px;
    font-weight: 500;
  }
  .navbar a:hover{
    color:  hsl(199, 95%, 56%);
    transition: 0.2s;
  }
  a{
    text-decoration: none;
    
  }

  .logo-container h1 {
    font-size: 28px;
    font-weight: 700;
    color: hsl(198.59deg 94.67% 55.88%);;
  }

  .menu-container ul {
    display: flex;
    gap: 25px;
    list-style: none;
  }

  .menu-list-item {
    font-size: 16px;
    color: #ccc;
    cursor: pointer;
    transition: color 0.3s ease;
  }

  .menu-list-item:hover {
    color: hsl(198.59deg 94.67% 55.88%);;
  }

  .profile-container {
    display: flex;
    align-items: center;
    gap: 15px;
  }

  .profile-container img {
    width: 35px;
    height: 35px;
    border-radius: 50%;
    object-fit: cover;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    h2 {
      font-size: 30px;
    }

    .form-container {
      width: 90%;
      padding: 1.5rem;
    }

    .button-container a {
      width: 100%;
    }

    .navbar {
      flex-direction: column;
      align-items: center;
    }

    .menu-container ul {
      flex-direction: column;
      gap: 10px;
      margin-top: 20px;
    }

    .navbar a {
      font-size: 18px;
    }
  }
</style>

<body>
  <!-- Navbar -->
  <div class="navbar">
    <div class="logo-container">
      <h1 class="logo">flakes</h1>
    </div>
    <div class="menu-container">
      <ul class="menu-list">
        <li class="menu-list-item active"> <a class="nav-link" href="/">Home</a> </li>
        <li class="menu-list-item"> <a class="nav-link" href="/add">Add</a></li>
        <li class="menu-list-item"> <a class="nav-link" href="/views">View</a> </li>
      </ul>
    </div>
  </div>

  <!-- Form Container -->
  <div class="form-container">
    <h2>Add Blog Details</h2>
    <form action="/insert" enctype="multipart/form-data" method="post" class="orange-form">
      <div class="input-container">
        <div class="name-container">
          <label for="name">Title</label>
          <input type="text" id="name" name="name" placeholder="Enter Blog Name" required>
        </div>
        <div class="description-container">
          <label for="description">Description</label>
          <textarea id="description" name="description" placeholder="Enter Blog Description" rows="4"
            required></textarea>
        </div>
        <div class="image-container">
          <label for="image">Blog Image</label>
          <input type="file" id="image" name="image" required>
        </div>
        <div class="button-container">
          <input type="submit" class="button" value="Add" />
        </div>
      </div>
    </form>
  </div>

</body>

</html>